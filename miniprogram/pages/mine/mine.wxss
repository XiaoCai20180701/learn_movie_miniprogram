/* pages/mine/mine.wxss */
.headView {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  width: 750rpx;
  height: 300rpx;
  position: relative;
  background: #f5f5f5;
}
.headView .avatar-img {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 40rpx solid #f5f5f5;
}
.avatar-name {
  z-index:2;
  position: relative;
  top: -40rpx;
  text-align: center;
  font-size:  14px;
}
.avatar-layout {
  position: relative;
}