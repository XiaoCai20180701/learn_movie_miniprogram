/* pages/classification/classification.wxss */
.nav-left {
  position: absolute;
  top: 0;
  left: 0;
  width: 25%;
  height: 100%;
  background: #f5f5f5;
  text-align: center;
}
.nav-left .nav-left-items {
  height: 60rpx;
  /* line-height: 60rpx;
  padding: 12rpx 0; */
  border-bottom: 2rpx solid #dedede;
  font-size: 14px;
  /* text-align: left; */
}
.nav-left .nav-left-items.active {
  background: #fff;
  color: #1296db;
}
.nav-right {
  position: absolute;
  top:0;
  right: 0;
  width: 75%;
  height: 100vh;
  padding-left: 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.nav-right .img {
  width: 160rpx;
  height: 160rpx;
}
.nav-right .text {
  text-align: center;
  margin-bottom: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
  font-size: 14px;
}